<% name ||= "Crear"%>
<h1> <%= name %> Articulo</h1>
<%= form_for(@article) do |f| %>

     <% @article.errors.full_messages.each do |message| %>
         <div class="be-blue white espacio">
            * <%= message %>
         </div>
     <%end%>

     <div class="field">
       <%= f.label :title %>
       <%= f.text_field :title, placeholder: "Titulo", class:"form-control" %>
     </div>
     <div class="field">
       <%= f.label :body %>
       <%= f.text_area :body, placeholder: "Escribe aqui el articulo",
                        style:"height:250px;", class:"form-control" %>
     </div>
     <div class="field">
         <%= f.submit "Guardar", class:"btn be-blue white"%>
     </div>
<%end%>
